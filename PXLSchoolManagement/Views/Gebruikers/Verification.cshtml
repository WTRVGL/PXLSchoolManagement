@model List<Gebruiker>
@{
    ViewData["Title"] = "Verification";
}

<h1>Nieuwe aanvragen</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Naam</p>
            </th>
            <th>
                <p>Voornaam</p>
            </th>
            <th>
                <p>Gewenste rol</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voornaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestedRole.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
