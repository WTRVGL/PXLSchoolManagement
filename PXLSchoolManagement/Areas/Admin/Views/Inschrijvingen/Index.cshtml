@model PXLSchoolManagement.Areas.Admin.Models.InschrijvingenIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Vak
            </th>
            <th>
                Academiejaar
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inschrijving in Model.Inschrijvingen)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => inschrijving.Vak.VakNaam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => inschrijving.Academiejaar.JarenGeformatteerd)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@inschrijving.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@inschrijving.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@inschrijving.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
