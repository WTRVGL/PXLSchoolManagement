@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_IdentityLayout";
}

    <div class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Voornaam" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="Input.Voornaam"></label>
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Naam" class="form-control" autocomplete="lastname" aria-required="true" />
                <label asp-for="Input.Naam"></label>
                <span asp-validation-for="Input.Naam" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                @Html.DropDownListFor(model => 
                model.Input.SelectedRoleId, 
                Model.Roles,
                "-- Selecteer gewenste rol --",
                new {@class = "form-control"})
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <div>
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log hier in</a>
                </p>
            </div>
            
        </form>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
